@page "/counter"
@using System.Numerics

<PageTitle>Counter</PageTitle>


@code { // This is a code directive, where you can add C# code in it 


    private int previousValue = 0;
    private int currentValue = 1;
    private int nextValue = 0;
        private void IncrementFibonacci()
    {
        nextValue = previousValue + currentValue;
        previousValue = currentValue;
        currentValue = nextValue;

    }

}


<h4>Counter</h4>

<p role="status">Current count: @previousValue</p>

<button class="btn btn-primary" @onclick="IncrementFibonacci">Click me</button>
